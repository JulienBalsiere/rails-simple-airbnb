<div class="container mt-4">
  <h1>All our flats</h1>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
          <%= image_tag(flat.picture_url || "https://source.unsplash.com/400x300/?apartment", class: "card-img-top", size: "400x300") %>
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text">
              <i class="fas fa-map-marker-alt"></i>
              <%= flat.address %>
            </p>
            <p class="card-text">
                <i class="fas fa-users"></i>
                <%= flat.number_of_guests %> guests
            </p>
            <p class="card-text">
              <i class="fas fa-euro-sign"></i>
              <%= flat.price_per_night %> â‚¬ / night
            </p>
          </div>
          <div class="card-footer d-flex justify-content-evenly">
            <%= link_to "View", flat_path(flat), class: "btn btn-sm btn-primary" %>
            <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-sm btn-warning" %>
            <%= link_to "Delete", flat_path(flat),
                        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                        class: "btn btn-sm btn-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-4">
    <%= link_to "Add a new flat", new_flat_path, class: "btn btn-success" %>
  </div>

</div>
