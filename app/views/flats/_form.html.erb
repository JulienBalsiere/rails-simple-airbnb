<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h2 class="mb-0">Add a new flat</h2>
        </div>

        <div class="card-body">
          <%= simple_form_for(@flat) do |f| %>
            <div class="form-group mb-3">
              <%= f.input :name, label: "Flat name", input_html: { class: "form-control" } %>
            </div>

            <div class="form-group mb-3">
              <%= f.input :address, input_html: { class: "form-control" } %>
            </div>

            <div class="form-group mb-3">
              <%= f.input :picture_url, label: "Picture URL", input_html: { class: "form-control" } %>
            </div>

            <div class="form-group mb-3">
              <%= f.input :description, as: :text, input_html: { rows: 4, class: "form-control" } %>
            </div>

            <div class="row">
              <div class="col-md-6">
                <%= f.input :price_per_night, label: "Price per night (â‚¬)", input_html: { class: "form-control" } %>
              </div>
              <div class="col-md-6">
                <%= f.input :number_of_guests, label: "Number of guests", input_html: { class: "form-control" } %>
              </div>
            </div>

            <div class="text-center mt-4">
              <%= f.button :submit, "Create Flat", class: "btn btn-success px-4" %>
              <%= link_to "Cancel", flats_path, class: "btn btn-outline-secondary ms-2" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
